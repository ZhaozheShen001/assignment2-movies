BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        # this layout is populated with Button widgets in app code
        id: entries_box
    
    BoxLayout:
        size_hint_y: 0.1
        orientation: 'horizontal'
        Spinner:
            id: state_selection
            text: app.current_state
            # values takes a list - could be a literal here or variable in app
            values: app.state_codes
            # on_text is the event (not on_release) when the text updates (spinner option is selected)
            # note that on_text runs even when the text is set for the very first time
            on_text: app.change_state(self.text)
        Label:
            id: output_label
            font_size: 48
            color: (1, 1, 0.9, 1)
    Label:
        size_hint_y: 0.1
        text: app.status_text
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        Button:
            text: "Create Widgets"
            on_release: app.create_widgets()
        Button:
            text: "Clear Widgets"
            on_release: app.clear_all()